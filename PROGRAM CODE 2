                        System.out.println("Remaining balls="+ b2);
                    }
                    else if (r2==5)
                    {
                        System.out.println("\n Commentator \n Oh... The fielder at Mid off, in the hope to get a run out, throws the ball with all his energy but misses the wickets by a big margin and gives 4 runs extra via overthrow. What could have been a 1 is now 5");
                        t2=t2+r2;
                        c2=(t2/i2)*6;
                        b2=20-i2;
                        if (t2>to1)
                        {
                            System.out.println("You win ... A match to remember");
                            System.out.println("                 ");
                            l1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("Codey's score = "+t2);
                            System.out.println("You win by " + (20-i2) + " balls");
                            System.out.println( "************************ ");
                            break;
                        }
                        System.out.println("Current Run Rate = "+c2);
                        System.out.println("Remaining balls="+ b2);
                    }
                    else 
                    {
                        System.out.println("\n Commentator \n Oh my god!!! That's outta here. What a slog over the long on. Fielders can only watch. Full 6 runs. The spectators are sure getting what they paid for");
                        t2=t2+r2;
                        c2=(t2/i2)*6;
                        b2=20-i2;
                        if (t2>to1)
                        {
                            System.out.println("You win ... A match to remember");
                            System.out.println("                 ");
                            l1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("Codey's score = "+t2);
                            System.out.println("You win by " + (20-i2) + " balls");
