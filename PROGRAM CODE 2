                            System.out.println("\n\n****************** Score Card ********************* "); 
                            System.out.println("          Name : " + z ); 
                            System.out.println("         Your score = "+t);
                            System.out.println("           It's a tie");
                            System.out.println("**************************************************** ");
                        }
                        break;
                    }
                    else if (c2r==5)
                    {
                        System.out.println("\nCommentator-\nOh no!!! Should not have gone for the overthrow runs. Good fielding by the mid-wicket fielder and gets a run out wicket");
                        if (t>to)
                        {
                            System.out.println("You win !!! A match, to remember");
                            System.out.println("                 ");
                            m++;
                            System.out.println("\n\n****************** Score Card ********************* ");
                            System.out.println("\t\tName : " + z ); 
                            System.out.println("\t\tYour score = "+t);
                            System.out.println("\t\tYou win by " + (to-t) +"runs");
                            System.out.println("**************************************************** ");
                        }
                        else
                        {
                            System.out.println("Draw!!! A true nail-biter !!! A match, to remember");
                            System.out.println("                 ");
                            n++;
                            System.out.println("\n\n****************** Score Card ********************* ");
                            System.out.println("          Name : " + z ); 
                            System.out.println("         Your score = "+t);
                            System.out.println("           It's a tie");
                            System.out.println("**************************************************** ");
                        }
                        break;
                    }
                    else 
                    {
                        System.out.println("\nCommentator-\nOh my!!! That's gone high. The ball did not connect well. Fielder at Long off is getting under it and ... caught out!!!");
                        if (t>to)
                        {
                            System.out.println("You win !!! A match, to remember");
                            System.out.println("                 ");
                            m++;
                            System.out.println("\n\n****************** Score Card ********************* ");
                            System.out.println("\t\tName : " + z ); 
                            System.out.println("\t\tYour score = "+t);
                            System.out.println("\t\tYou win by " + (to-t) +"runs");
                            System.out.println("****************************************************** ");
                        }
                        else
                        {
                            System.out.println("Draw!!! A true nail-biter !!! A match, to remember");
                            System.out.println("                 ");
                            n++;
                            System.out.println("\n\n****************** Score Card ********************* ");
                            System.out.println("          Name : " + z ); 
                            System.out.println("         Your score = "+t);
                            System.out.println("           It's a tie");
                            System.out.println("**************************************************** ");;
                        }
                        break;
                    }
                }
            }
            if (l==0 && m==0 && n==0)
            {
                if (t>to)
                {
                    System.out.println("Oh no...No balls remaining. I have failed to chase your target");
                    System.out.println("You win !!! A match, to remember");
                    System.out.println("                 ");
                    System.out.println(" ********* Score Card ******** ");
                    System.out.println("          Name : " + z);
                    System.out.println("         Your score = "+t);
                    System.out.println("    You win by " + (to-t) +"runs");
                    System.out.println("************************************ ");
                    System.out.println(" ");
                }
                else
                {
                    System.out.println("Oh no... No more balls remaining. It's a draw. A match to remember. ");
                    System.out.println("You win !!! A match, to remember");
                    System.out.println("                 ");
                    System.out.println(" ********* Score Card ******** ");
                    System.out.println("          Name : " + z);
                    System.out.println("         Your score = "+t);
                    System.out.println("           It's a tie");
                    System.out.println("************************************ ");
                    System.out.println(" ");
                }
            }
        }
        else if (a==1 || a==2)//user bowls first
        {
            System.out.println("Oh. As per the toss, you get to bowl first. But remember, " + z + " In this T20 format you will need to limit your opponents run as soon as possible");
            System.out.println("With that being said, prepare yourself for the first bowl");
            for (j1=1;j1<=20;j1++)
            {
                System.out.println("Enter a number between 0 to 6 which will be your guess of Codey's run");
                or1=Integer.parseInt(input.readLine()); 
                while (or1>6 || or1<0)
                {
                    System.out.println("That's not possible!!! Enter a number between 0 and 6");
                    or1=Integer.parseInt(input.readLine());
                }
                c2r1=(int)(Math.random()*7);
                System.out.println("Codey's runs = "+c2r1);
                System.out.println("Your guess = "+or1);
                if (c2r1!=or1)
                {
                    if (c2r1==0)
                    {
                        System.out.println("\n Commentator \n Codey gracefully leaves the ball and allows it to go to the keeper. A dot delivery");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else if (c2r1==1) 
                    {
                        System.out.println("\n Commentator \n Codey gently drives the ball right in the hands of the Mid-Wicket fielder. A quick single");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else if (c2r1==2)
                    {
                        System.out.println("\n Commentator \nCodey flicks the ball with power towards deep square leg and picks up a double");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else if (c2r1==3)
                    {
                        System.out.println("\n Commentator \n Codey drives the ball powerfully towards long off. Picks up 3 run. Excellent running between the wickets");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else if (c2r1==4)
                    {
                        System.out.println("\n Commentator \n What a strike!!! Codey powerfully drives the ball across the covers while fielder barely got the chance to move a muscle. Excellent stroke");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        nf2++;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else if (c2r1==5)
                    {
                        System.out.println("\n Commentator \n Oh... The fielder at Mid off, in the hope to get a run out, throws the ball with all his energy but misses the wickets by a big margin and gives 4 runs extra via overthrow. What could have been a 1 is now 5");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                    else 
                    {
                        System.out.println("\n Commentator \n Oh my god!!! That's outta here. What a slog over the long on. Fielders can only watch. Full 6 runs. The spectators are sure getting what they paid for");
                        to1=to1+c2r1;
                        rr1=(to1/j1)*6;
                        bo1=20-j1;
                        ns2++;
                        System.out.println("My current total =" + to1);
                        System.out.println("Current Run Rate = "+rr1);
                        System.out.println("Remaining balls="+ bo1);
                    }
                }
                else
                {
                    System.out.println("What!!! How is that possible. I'm out?!");
                    if (c2r1==0)
                    {
                        System.out.println("\n Commentator \n Codey clumsily tries to leave the ball but gets a soft edge. Easy catch for the wicketkeeper");
                        break;
                    }
                    else if (c2r1==1) 
                    {
                        System.out.println("\n Commentator \n Codey tries to sweep the ball and get a single but the unexpected bounce got the pad before bat. The opponents appeal for lbw. Umpire agrees");
                        break;
                    }
                    else if (c2r1==2)
                    {
                        System.out.println("\n Commentator \n Codey tries to drive the ball onto the covers but gets a hard edge. The fielder takes the catch in the gulley");
                        break;
                    }
                    else if (c2r1==3)
                    {
                        System.out.println("\n Commentator \n Codey smoothly directs the ball onto fine leg but the ball didn't remain grounded. Tough but successful catch by the deep fine leg");
                        break;
                    }
                    else if (c2r1==4)
                    {
                        System.out.println("\n Commentator \n A imperfectly timed square cut in hopes to get a boundary crashes as the cutter delivery knocked the stumps off the ground ");
                        break;
