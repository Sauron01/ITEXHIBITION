import java.io.*;
class exhibit_comp2
{
    int toss() throws IOException
    {
        BufferedReader input=new BufferedReader (new InputStreamReader(System.in));
        char toss_choice_by_user;
        int random_no_generated_for_toss,z,p;
        char call_is,innings_choice_by_user;
        System.out.println("HEADS or TAILS?");
        System.out.println("Enter H for Heads or T for Tails");
        toss_choice_by_user=input.readLine().charAt(0);
        while (toss_choice_by_user!='h' && toss_choice_by_user!='H' && toss_choice_by_user!='t' && toss_choice_by_user!='T')
        {
            System.out.println("Invalid input. Please enter H to select Heads or enter T to select Tails.");
            toss_choice_by_user=input.readLine().charAt(0);
        }
        random_no_generated_for_toss=(int)(Math.random()*2);
        if (random_no_generated_for_toss==0)
        { 
            call_is='H';
        }
        else
        {
            call_is='T';
        }
        if (call_is=='H')
        {
            if (toss_choice_by_user=='H' || toss_choice_by_user=='h')
            {
                System.out.println("\nCongrats!!! It is Heads. You have won the toss");
                System.out.println("So, would you like to Bat first or Bowl first");
                System.out.println("Enter A to bat and B to Bowl");
                innings_choice_by_user=input.readLine().charAt(0);
                while (innings_choice_by_user!='a' && innings_choice_by_user!='A' && innings_choice_by_user!='b' && innings_choice_by_user!='B')
                {
                    System.out.println("Invalid input. Please enter A to select Batting or enter B to select Bowling.");
                    innings_choice_by_user=input.readLine().charAt(0);
                }
                if (innings_choice_by_user=='a' || innings_choice_by_user=='A')
                {
                    p=0;
                    return p;
                }
                else 
                {
                    p=1;
                    return p;
                }
            }
            else 
            {
                 System.out.println("\nOh drat!!! It is Heads. You have lost the toss. Codey will now decide wheather it wants to Bat or Bowl"); 
                 z=(int)(Math.random()*2);
                 if (z==0)
                 {
                      System.out.println("Codey has elected to BAT");
                      p=2;
                      return p;
                 }
                 else
                 {
                      System.out.println("Codey has elected to Bowl");
                      p=3;
                      return p;
                 }
            }
        }                    
        else // call is tails
        {
            if (toss_choice_by_user=='H' || toss_choice_by_user=='h')
            {
                 System.out.println("\nOh drat!!! It is Tails. You have lost the toss. Codey will now decide wheather it wants to Bat or Bowl");
                 z=(int)(Math.random()*2);
                 if (z==0)
                 {
                      System.out.println(" Codey has elected to BAT");
                      p=2;
                      return p;
                 }
                 else
                     
                 {
                      System.out.println("Codey has elected to Bowl");
                      p=3;
                      return p;
                 }
            }    
            else
            { 
                 System.out.println("\nCongrats!!! It is Tails. You have won the toss"); 
                 System.out.println("So, would you like to Bat first or Bowl first");
                 System.out.println("Enter A to bat and B to Bowl");
                 innings_choice_by_user=input.readLine().charAt(0);
                 while (innings_choice_by_user!='a' && innings_choice_by_user!='A' && innings_choice_by_user!='b' && innings_choice_by_user!='B')
                 {
                      System.out.println("Invalid input. Please enter A to select Batting or enter B to select Bowling.");
                      innings_choice_by_user=input.readLine().charAt(0);
                 }
                 if (innings_choice_by_user=='a' || innings_choice_by_user=='A')
                 {
                      p=0;
                      return p;
                 }
                 else 
                 {
                      p=1;
                      return p;
                 }
            }                                   
         }
    }
    void ttwenty (int a, String z) throws IOException
    {
        BufferedReader input = new BufferedReader (new InputStreamReader(System.in));
        int i=0,r=0,cr=0,or=0,c2r=0,t=0,c=0,b=0,to=0,rr=0,bo=0,j=0,j1=0,or1=0,c2r1=0,to1=0,rr1=0,bo1=0,i2=0,r2=0,cr2=0,t2=0,c2=0,b2=0,ns=0,nf=0,ns1=0,nf1=0,ns2=0,nf2=0,l=0,m=0,n=0,l1=0,m1=0,n1=0;
        if (a==0 || a==3)// user bats first or comp bowls first
        {
            System.out.println("\nSo, now it is time for you to bat. But remember, "+ z + ",In this T20 format you will need to hit as much runs as possible in the shortest time to challenge your opponent.");
            System.out.println("With that being said, prepare yourself for the first bowl");
            System.out.println("\n\n\nLET THE GAME BEGIN");
            for (i=1;i<=20;i++)
            {
                System.out.println("\n\n\n\n\n\n\n\n\nEnter a number between 0 to 6 which will be the runs you want to hit");
                r=Integer.parseInt(input.readLine()); 
                while (r>6 || r<0)
                {
                    System.out.println("That's not possible!!! Enter a number between 0 and 6");
                    r=Integer.parseInt(input.readLine());
                }
                cr=(int)(Math.random()*7);
                System.out.println("Your runs = "+r);
                System.out.println("Codey's guess = "+cr);
                if (r!=cr)
                {
                    if (r==0)
                    {
                        System.out.println("\nCommentator-\n"+ z+ " gracefully leaves the ball and allows it to go to the keeper. A dot delivery");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==1) 
                    {
                        System.out.println("\nCommentator-\n"+z+ " gently drives the ball right in the hands of the Mid-Wicket fielder. A quick single");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==2)
                    {
                        System.out.println("\nCommentator-\n"+z+ " flicks the ball with power towards deep square leg and picks up a double");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==3)
                    {
                        System.out.println("\nCommentator-\n"+z+ " drives the ball powerfully towards long off. Picks up 3 run. Excellent running between the wickets");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==4)
                    {
                        System.out.println("\nCommentator-\nWhat a strike!!!" + z + " powerfully drives the ball across the covers while fielder barely got the chance to move a muscle. Excellent stroke");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        nf++;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==5)
                    {
                        System.out.println("\nCommentator-\nOh... The fielder at Mid off, in the hope to get a run out, throws the ball with all his energy but misses the wickets by a big margin and gives 4 runs extra via overthrow. What could have been a 1 is now 5");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                    else 
                    {
                        System.out.println("\nCommentator-\nOh my god!!! That's outta here. What a slog over the long on. Fielders can only watch. Full 6 runs. The spectators are sure getting what they paid for");
                        t=t+r;
                        c=(t/i)*6;
                        b=20-i;
                        ns++;
                        System.out.println("\nCurrent Total =" +t);
                        System.out.println("Current Run Rate = "+c);
                        System.out.println("Remaining balls="+ b);
                    }
                }
                else // user run= Codey run
                {
                    System.out.println("\nYES!!! I got you.");
                    System.out.println("You are out");
                    if (r==0)
                    {
                        System.out.println("\nCommentator-\n"+z+ " clumsily tries to leave the ball but gets a soft edge. Easy catch for the wicketkeeper");
                        break;
                    }
                    else if (r==1) 
                    {
                        System.out.println("\nCommentator-\n"+z+ " tries to sweep the ball and get a single but the unexpected bounce got the pad before bat. The opponents appeal for lbw. Umpire agrees");
                        break;
                    }
                    else if (r==2)
                    {
                        System.out.println("\nCommentator-\n"+z+ " tries to drive the ball onto the covers but gets a hard edge. The fielder takes the catch in the gulley");
                        break;
                    }
                    else if (r==3)
                    {
                        System.out.println("\nCommentator-\n"+z+ "smoothly directs the ball onto fine leg but the ball didn't remain grounded. Tough but successful catch by the deep fine leg");
                        break;
                    }
                    else if (r==4)
                    {
                        System.out.println("\nCommentor-\nA imperfectly timed square cut in hopes to get a boundary crashes as the cutter delivery knocked the stumps off the ground ");
                        break;
                    }
                    else if (r==5)
                    {
                        System.out.println("\nCommentator-\nOh no!!! Should not have gone for the overthrow runs. Good fielding by the mid-wicket fielder and gets a run out wicket");
                        break;
                    }
                    else 
                    {
                        System.out.println("\nCommentator-\nOh my!!! That's gone high. The ball did not connect well. Fielder at Long off is getting under it and ... caught out!!!");
                        break;
                    }
                }
            }
            System.out.println("Your innings has come to an end");
            System.out.println("Here is your scorecard");
            System.out.println("\n\n\n **************" +z+ " Scorecard ************************** ");
            System.out.println("\t\tName : " + z);
            System.out.println("\t\tTotal runs="+t);
            System.out.println("\t\tRequired Run Rate="+((t/20)*6));
            System.out.println("\t\tYou've hit " + nf + "fours");
            System.out.println("\t\tYou've hit " + ns + "sixes");
            System.out.println("********************************************************** ");
            System.out.println("\n\nNow it is my chance to bat");
            for (j=1;j<=20;j++)
            {
                System.out.println("\n\n\n\n\n\nEnter a number between 0 to 6 which will be your guess of Codey's run");
                or=Integer.parseInt(input.readLine()); 
                while (or>6 || or<0)
                {
                    System.out.println("Oh. It seems you have made a typing error.  Enter a number between 0 and 6");
                    or=Integer.parseInt(input.readLine());
                }
                c2r=(int)(Math.random()*7);
                System.out.println("Codey's runs = "+c2r);
                System.out.println("Your guess = "+or);
                if (c2r!=or)
                {
                    if (c2r==0)
                    {
                        System.out.println("\nCommentator-\nCodey gracefully leaves the ball and allows it to go to the keeper. A dot delivery");
                        to=to+c2r;
                        rr=(to/j)*6;
                        bo=20-j;
                        if (to>t)
                        {
                            System.out.println("\n\n\nYAY!! I win ... You lose. A great match, though.");;
                            l++;
                            System.out.println("\n******************** Score Card ********************* ");
                            System.out.println("\t\tName : Codey");
                            System.out.println("\t\tTarget = "+t);
                            System.out.println("\t\tCodey wins by " + (20-j) + " balls");
                            System.out.println("\t\tCodey has hit " + nf +"fours");
                            System.out.println("\t\tCodey has hit " + ns +"sixes");
                            System.out.println( "***************************************************** ");
                            break;
                        }
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ bo);
                        System.out.println("My total so far = "+to);
                        System.out.println("To hit " + (t-to) + " runs in " + bo + " balls");
                    }
                    else if (c2r==1) 
                    {
                        System.out.println("\nCommentator-\nCodey gently drives the ball right in the hands of the Mid-Wicket fielder. A quick single");
                        to=to+c2r;
                        rr=(to/j)*6;
                        bo=20-j;
                        if (to>t)
                        {
                            System.out.println("\n\n\nYAY!! I win ... You lose. A great match, though.");;
                            l++;
                            System.out.println("\n******************** Score Card ********************* ");
                            System.out.println("\t\tName : Codey");
                            System.out.println("\t\tTarget = "+t);
                            System.out.println("\t\tCodey wins by " + (20-j) + " balls");
