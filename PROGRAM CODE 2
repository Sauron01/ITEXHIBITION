                            System.out.println("   Codey's score = "+to1);
                            System.out.println("      It's a tie");
                            System.out.println(" ************************ ");
                        }
                        break;
                    }
                    else if (r==2)
                    {
                        System.out.println("\n Commentator \n "+ z + " tries to drive the ball onto the covers but gets a hard edge. The fielder takes the catch in the gulley");
                        if (to1>t2)
                        {
