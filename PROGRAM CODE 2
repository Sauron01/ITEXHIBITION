                            System.out.println(" ************************ ");
                        }
                        else//to1==t2...draw
                        {
                            System.out.println("It's a draw. A true nail-biter. A match to remember");
                            System.out.println("                 ");
                            n1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("   Codey's score = "+to1);
                            System.out.println("      It's a tie");
                            System.out.println(" ************************ ");
                        }
                        break;
                    }
                    else 
                    {
                        System.out.println("\n Commentator \n Oh my!!! That's gone high. The ball did not connect well. Fielder at Long off is getting under it and ... caught out!!!");
                        if (to1>t2)
                        {
                            System.out.println("Codey wins ... You lose. A great match, though.");
                            System.out.println("                 ");
                            m1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("Codey's score = "+to1);
                            System.out.println("Codey wins by " + (to1-t2) + "runs");
                            System.out.println(" ************************ ");
                        }
                        else//to1==t2...draw
                        {
                            System.out.println("It's a draw. A true nail-biter. A match to remember");
                            System.out.println("                 ");
                            n1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("   Codey's score = "+to1);
                            System.out.println("      It's a tie");
                            System.out.println(" ************************ ");
                        }
                        break;
                    }
                }
            }
            if (l1==0 && m1==0 && n1==0)
            {
                if (to1>t2)
                {
                    System.out.println("Oh no... The game is over... You have failed to chase down Codey");
                    System.out.println("Codey wins ... You lose. A great match, though.");
                    System.out.println("                 ");
                    System.out.println(" **** Score Card **** ");
                    System.out.println("Codey's score = "+to1);
                    System.out.println("Codey wins by " + (to1-t2) + "runs");
                    System.out.println(" ************************ ");
                }
                else 
                {
                    System.out.println("Oh no... The game is over... It's a tie");
                    System.out.println(" ");
                    System.out.println("                 ");
                    System.out.println(" **** Score Card **** ");
                    System.out.println("Codey's score = "+to1);
                    System.out.println("It's a tie");
                    System.out.println(" ************************ ");
                }
            }
            else 
            {
                System.out.println("Bye");
            }
        } 
    }
    void odi (int a, String y) throws IOException
    {
        BufferedReader input = new BufferedReader (new InputStreamReader(System.in));
        int i=0,r=0,cr=0,j=0,tu=0,tc=0,b=0,rr=0,rrc=0,bc=0,scc=0,scc2=0,ns=0,nf=0,n1=0,n2=0;
        if (a==0 || a==3)// user bats first or Codey bowls first
        {
            System.out.println("\n\nOh. As per the toss, you get to bat first. In this ODI format you will need to hit as much runs as possible to challenge your opponent.");
            System.out.println("In this you will face 35 deliveries.");
            System.out.println("\n\n\nWith that being said, prepare yourself for the first bowl");
            for (i=1;i<=35;i++)
            {
                System.out.println("\n\n\n\n\n\nEnter a number between 0 to 6 which will be the runs you want to hit");
                r=Integer.parseInt(input.readLine()); 
                while (r>6 || cr<0)
                {
                    System.out.println("That's not possible!!! Enter a number between 0 and 6");
                    r=Integer.parseInt(input.readLine());
                }
                cr=(int)(Math.random()*7);
                System.out.println("Your runs = "+r);
                System.out.println("Codey's guess = "+cr);
                if (r!=cr)
                {
                    if (r==0)// r= runs by user
                    {
                        System.out.println("\n Commentator- \n" + y + " gracefully leaves the ball and allows it to go to the keeper. A dot delivery");
                        tu=tu +r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==1) 
                    {
                        System.out.println("\n Commentator -\n" + y +  " drives the ball right in the hands of the Mid-Wicket fielder. A quick single");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==2)
                    {
                        System.out.println( "\n Commentator - \n"+y+ "flicks the ball with power towards deep square leg and picks up a double");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==3)
                    {
                        System.out.println("\n Commentator - \n"+y+" drives the ball powerfully towards long off. Picks up 3 run. Excellent running between the wickets");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==4)
                    {
                        System.out.println("\n Commentator -\n" + "What a strike!!!"  +y + " powerfully drives the ball across the covers while fielder barely got the chance to move a muscle. Excellent stroke");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        nf++;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else if (r==5)
                    {
                        System.out.println("\n Commentator \n -Oh... The fielder at Mid off, in the hope to get a run out, throws the ball with all his energy but misses the wickets by a big margin and gives 4 runs extra via overthrow. What could have been a 1 is now 5");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                    else 
                    {
                        System.out.println("Oh my god!!! That's outta here. What a slog over the long on. Fielders can only watch. Full 6 runs. The spectators are sure getting what they paid for");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        ns++;
                        System.out.println("\n Current Total =" + tu);
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                    }
                }
                else
                {
                    System.out.println("Oh no!!! That's Out!!!");
                    if (r==0)
                    {
                        System.out.println("\n Commentator- \n " + y +"   clumsily tries to leave the ball but gets a soft edge. Easy catch for the wicketkeeper");
                        break;
                    }
                    else if (r==1) 
                    {
                        System.out.println("\n Commentator - \n"+y+" tries to sweep the ball and get a single but the unexpected bounce got the pad before bat. The opponents appeal for lbw. Umpire agrees");
                        break;
                    }
                    else if (r==2)
                    {
                        System.out.println("\n Commentator - \n"+y+ "tries to drive the ball onto the covers but gets a hard edge. The fielder takes the catch in the gulley");
                        break;
                    }
                    else if (r==3)
                    {
                        System.out.println("\n Commentator - \n"+y+" smoothly directs the ball onto fine leg but the ball didn't remain grounded. Tough but successful catch by the deep fine leg");
                        break;
                    }
                    else if (r==4)
                    {
                        System.out.println("\n Commentator - \n A imperfectly timed square cut in hopes to get a boundary crashes as the cutter delivery knocked the stumps off the ground ");
                        break;
                    }
                    else if (r==5)
                    {
                        System.out.println("\n Commentator - \n Oh no!!! Should not have gone for the overthrow runs. Good fielding by the mid-wicket fielder and gets a run out wicket");
                        break;
                    }
                    else 
                    {
                        System.out.println("\n Commentator - \n Oh my!!! That's gone high. The ball did not connect well. Fielder at Long off is getting under it and ... caught out!!!");
                        break;
                    }
                }
            }
            System.out.println("Your innings has come to an end");
            System.out.println("Here is your scorecard");
            System.out.println("\n\n\n ***********" + y + " Scorecard *****************");
            System.out.println("                          ");
            System.out.println("**** Your Scorecard **** ");
            System.out.println(" \t\t\t Total runs=" +tu);
            System.out.println("\t\t\t Total runs="+tu);
            System.out.println("Required Run Rate="+(tu/35)*6);
            System.out.println(" You have hit " + nf + " fours");
            System.out.println(" You have hit " + ns + " sixes");
            System.out.println("************************* ");
            System.out.println("                           ");
            System.out.println("Now it is Codey's chance to bat");
            for (j=1;j<=35;j++)// 2nd innings
            {
                System.out.println("\n\n\n\n\n Enter a number between 0 to 6 which will be your guess of Codey's run");
                r=Integer.parseInt(input.readLine()); 
                while (r>6 || cr<0)
                {
                    System.out.println("That's not possible!!! Enter a number between 0 and 6");
                    r=Integer.parseInt(input.readLine());
                }
                cr=(int)(Math.random()*7);
                System.out.println("Your guess = "+r);
                System.out.println("Codey's run = "+cr);
                if (cr!=r)
                {
                    if (cr==0)// cr= runs by Codey
                    {
                        System.out.println("\n Commentator -\n Codey gracefully leaves the ball and allows it to go to the keeper. A dot delivery");
                        tc=tc +cr;
                        rrc=(tc/j)*6;
                        bc=35-j;
                        System.out.println("Current Run Rate = "+rrc);
                        System.out.println("Remaining balls="+ bc);
                    }
                    else if (cr==1) 
                    {
                        System.out.println("\n Commentator -\n Codey gently drives the ball right in the hands of the Mid-Wicket fielder. A quick single");
                        tc=tc+cr;
                        rrc=(tc/j)*6;
                        bc=35-j;
                        System.out.println("Current Run Rate = "+rrc);
                        System.out.println("Remaining balls="+ bc);
                        if(tc>tu)
                        {
                         System.out.println("\n\n\n\n I Won");
                         System.out.println("Codey's innings has come to an end");
                         System.out.println(" \n ************* Score Card ************"); 
                         System.out.println("\t\t Name : Codey");                          
                         System.out.println("Total runs="+tc);
                         System.out.println("\t\t Codey wins by" + (35-j) + " balls");
                         System.out.println("Run Rate="+(tc/35)*6);
                         System.out.println("************************* ");
                         System.out.println("                           ");
                         scc2++;
                         break;
                        }
                    }
                    else if (cr==2)
                    {
                        System.out.println("\n Commentator -\nCodey flicks the ball with power towards deep square leg and picks up a double");
                        tc=tc+cr;
