                        b=35-i;
                        n1++;
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                        if(tc<tu)
                        {
                         System.out.println("You Won");
                         System.out.println("Your innings has come to an end");
                         System.out.println("Here is Your  scorecard");
                         System.out.println("                          ");
                         System.out.println(" **** Your Scorecard **** ");
                         System.out.println("Total runs="+tu);
                         System.out.println("You win by" + (35-i) + " balls");
                         System.out.println("Run Rate="+(tu/35)*6);
                         System.out.println("You have hit " + n1 + " fours");
                         System.out.println("You have hit " + n2 + " sixes");
                         System.out.println("************************* ");
                         System.out.println("                          ");
                         scc++;
                         break;
                        }
                    }
                    else if (r==5)
                    {
                        System.out.println("\n Commentator \n-  Oh... The fielder at Mid off, in the hope to get a run out, throws the ball with all his energy but misses the wickets by a big margin and gives 4 runs extra via overthrow. What could have been a 1 is now 5");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                        if(tc<tu)
                        {
                         System.out.println("You Won");
                         System.out.println("Your innings has come to an end");
                         System.out.println("Here is Your  scorecard");
                         System.out.println("                          ");
                         System.out.println(" **** Your Scorecard **** ");
                         System.out.println("Total runs="+tu);
                         System.out.println("You win by" + (35-i) + " balls");
                         System.out.println("Run Rate="+(tu/35)*6);
                         System.out.println("You have hit " + n1 + " fours");
                         System.out.println("You have hit " + n2 + " sixes");
                         System.out.println("************************* ");
                         System.out.println("                           ");
                         scc++;
                         break;
                        }
                    }
                    else 
                    {
                        System.out.println("\n Commentator \n Oh my god!!! That's outta here. What a slog over the long on. Fielders can only watch. Full 6 runs. The spectators are sure getting what they paid for");
                        tu=tu+r;
                        rr=(tu/i)*6;
                        b=35-i;
                        n2++;
                        System.out.println("Current Run Rate = "+rr);
                        System.out.println("Remaining balls="+ b);
                        if(tc<tu)
                        {
                         System.out.println("You Won");
                         System.out.println("Your innings has come to an end");
                         System.out.println("Here is Your  scorecard");
                         System.out.println("                          ");
                         System.out.println(" **** Your Scorecard **** ");
                         System.out.println("Total runs="+tu);
                         System.out.println("You win by" + (35-i) + " balls");
                         System.out.println("Run Rate="+(tu/35)*6);
                         System.out.println("You have hit " + n1 + " fours");
                         System.out.println("You have hit " + n2 + " sixes");
                         System.out.println("************************* ");
                         System.out.println("                           ");
                         scc++;
                         break;
                        }
                    }
                }
                else
                {
                    System.out.println("Oh no!!! That's Out!!!");
                    if (r==0)
                    {
                        System.out.println("\n Commentator \n-  " +y +" clumsily tries to leave the ball but gets a soft edge. Easy catch for the wicketkeeper");
                        break;
                    }
                    else if (r==1) 
                    {
                        System.out.println("\n Commentator \n-  " +y +" tries to sweep the ball and get a single but the unexpected bounce got the pad before bat. The opponents appeal for lbw. Umpire agrees");
                        break;
                    }
                    else if (r==2)
                    {
                        System.out.println("\n Commentator \n-  " +y +" tries to drive the ball onto the covers but gets a hard edge. The fielder takes the catch in the gulley");
                        break;
                    }
                    else if (r==3)
                    {
                        System.out.println("\n Commentator \n-  " +y +" smoothly directs the ball onto fine leg but the ball didn't remain grounded. Tough but successful catch by the deep fine leg");
                        break;
                    }
                    else if (r==4)
                    {
                        System.out.println("\n Commentator\n A imperfectly timed square cut in hopes to get a boundary crashes as the cutter delivery knocked the stumps off the ground ");
                        break;
                    }
                    else if (r==5)
                    {
                        System.out.println("\n Commentator Oh no!!! Should not have gone for the overthrow runs. Good fielding by the mid-wicket fielder and gets a run out wicket");
                        break;
                    }
                    else 
                    {
                        System.out.println("\n Commentator Oh my!!! That's gone high. The ball did not connect well. Fielder at Long off is getting under it and ... caught out!!!");
                        break;
                    }
                }
            }
            if(scc<=0)
            {
                
                System.out.println("Your innings has come to an end");
                System.out.println("Here is your scorecard");
                System.out.println("                          ");
                System.out.println("**** YOUR Scorecard **** ");
                System.out.println("Total runs="+tu);
                System.out.println("Run Rate="+(tu/35)*6);
                System.out.println("You have hit " + n1 + " fours");
                System.out.println("You have hit " + n2 + " sixes");
                System.out.println("************************* ");
                System.out.println("                           ");
            }
            if(tc>tu)
            {
                System.out.println("Codey Won");   
            }
            else if(tc<tu)
            {
                
                
                     System.out.println("You Won");
                     System.out.println("Your innings has come to an end");
                     System.out.println("");
                     System.out.println("");
                     System.out.println("************************* ");
                     System.out.println("                          ");
                
                 
            }
            else// tc==tu
            {
                System.out.println("Its a draw");
            }
        }
        else 
        {
            System.out.println("Bye");
        }
    }
    public static void main (String args[]) throws IOException
    {
        BufferedReader input = new BufferedReader(new InputStreamReader(System.in));
        char format_choice, wanting_to_play;
        int k;
        String name;
        exhibit_comp ob = new exhibit_comp();
        System.out.println("\t\t\tHi, My name is Codey. Welcome to 'THE I.T. FEST, ST. XAVIER'S SCHOOL, DORANDA, 2018'");
        System.out.println("\n\nToday, we are going to have a quick game of... THE HAND CRICKET");
        System.out.println("Are you up for it?");
        System.out.println("Enter Y for Yes or Enter N for No which will terminate the game");
        wanting_to_play=input.readLine().charAt(0);
        while (wanting_to_play!='y' && wanting_to_play!='Y' && wanting_to_play!='n' && wanting_to_play!='N')
        {
            System.out.println("What? I don't understand. Please enter Y to begin the game or enter N to quit.");
            wanting_to_play=input.readLine().charAt(0);
        }
        if (wanting_to_play=='y'|| wanting_to_play=='Y')
        {
            System.out.println("Wise choice. We are going to have so much fun");
            System.out.println("First things first. What's your name?");
            name=input.readLine();
            System.out.println(name+ ",What a wonderful name!");
            System.out.println("So....LET THE GAME BEGIN");
            System.out.println("\n \nThere are two format of game to choose from");
            System.out.println("First, The t20 format in which each of the innings will end after 20 balls. Enter T to choose this format");
            System.out.println("Second, The ODI format in which each of the innings will end after 35 balls. Enter D to choose this format");
            System.out.println("\nEnter your choice," + name);
            format_choice=input.readLine().charAt(0);
            while( format_choice!= 't' && format_choice!= 'T' && format_choice!= 'd' && format_choice!= 'D')
            {
                System.out.println(" Invalid choice . Please Enter T for T-20 format or enter D for ODI format");
                format_choice=input.readLine().charAt(0);
            }
            System.out.println("Ok. But before we begin we need to perform a very vital part of the game. The TOSS!!!");
            k=ob.toss();
            if (format_choice=='t' || format_choice=='T')
            {
                ob.ttwenty(k,name);
            }
            else
            {
                ob.odi(k,name);
            }
        }
        else
        {
            System.out.println("Oh well...Some other time maybe :(");
        }
    }
}
       

    
