            System.out.println("Codey has hit " + ns2 + " sixes");
            System.out.println("************************* ");
            System.out.println("                           ");
            System.out.println("                          ");
            System.out.println("Now it is your chance to bat");
            for (i2=1;i2<=20;i2++)// 2nd innings
            {
