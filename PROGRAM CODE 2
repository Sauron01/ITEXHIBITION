                            break;
                        }
                        System.out.println("Current Run Rate = "+c2);
                        System.out.println("Remaining balls="+ b2);
                        System.out.println("Your total so far = " +t2);
                        System.out.println("To hit " + (t2-to1) + " runs in " + b2 + "balls");
                    }
                }
                else // user run= Codey run
                {
                    System.out.println("Yes!!! I got you! That's Out!!!");
                    if (r==0)
                    {
                        System.out.println("\n Commentator \n  clumsily tries to leave the ball but gets a soft edge. Easy catch for the wicketkeeper");
                        if (to1>t2)
                        {
                            System.out.println("Codey wins ... You lose. A great match, though.");
                            System.out.println("                 ");
                            m1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("Codey's score = "+to1);
