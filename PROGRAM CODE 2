                        break;
                    }
                    else if (r==3)
                    {
                        System.out.println("\n Commentator \n "+ z + " smoothly directs the ball onto fine leg but the ball didn't remain grounded. Tough but successful catch by the deep fine leg");
                        if (to1>t2)
                        {
