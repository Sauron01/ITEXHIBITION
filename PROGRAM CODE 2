                            n1++;
                            System.out.println(" **** Score Card **** ");
                            System.out.println("   Codey's score = "+to1);
                            System.out.println("      It's a tie");
                            System.out.println(" ************************ ");
                        }
                        break;
                    }
                    else if (r==1) 
                    {
                        System.out.println("\n Commentator \n "+ z + " tries to sweep the ball and get a single but the unexpected bounce got the pad before bat. The opponents appeal for lbw. Umpire agrees");
                        if (to1>t2)
                        {
                            System.out.println("Codey wins ... You lose. A great match, though.");
